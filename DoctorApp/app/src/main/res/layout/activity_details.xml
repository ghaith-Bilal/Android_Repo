<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_id"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ddddas"
    tools:context="mytextviewapp.add.com.doctorapp.details">
    <ImageView
        android:id="@+id/imag_doctor"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:id="@+id/doctor_id"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="اسم الدكتور :"
        android:textSize="25sp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/imag_doctor"
        android:layout_marginRight="3dp"
        android:textColor="#4b6051"/>
    <TextView
        android:id="@+id/doc_name"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/doctor_id"
        android:textColor="#000000"
        android:background="#11000000"
        android:textSize="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="3dp"
        android:text=""
        />
    <TextView
        android:id="@+id/spec_id"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="التخصص :"
        android:textSize="25sp"
        android:layout_below="@+id/doc_name"
        android:layout_marginTop="5dp"
        android:layout_marginRight="3dp"
        android:textColor="#4b6051"/>
    <TextView
        android:id="@+id/doc_spec"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/spec_id"
        android:textSize="20dp"
        android:textColor="#000000"
        android:background="#11000000"
        android:layout_marginTop="5dp"
        android:layout_marginRight="2dp"
        android:text=""
        />
    <TextView
        android:id="@+id/country_id"
        android:layout_width="match_parent"
        android:layout_height="30sp"
        android:layout_below="@+id/doc_spec"
        android:text="العنوان :"
        android:layout_marginRight="3dp"
        android:textColor="#4b6051"
        android:layout_marginTop="5dp"
        android:textSize="25sp"/>
    <TextView
        android:id="@+id/doc_country"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/country_id"
        android:textSize="20dp"
        android:textColor="#000000"
        android:background="#11000000"
        android:layout_marginTop="5dp"
        android:layout_marginRight="2dp"
        android:text=""
        />

    <android.support.v7.widget.CardView
        android:id="@+id/card_id"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_below="@id/doc_country"
        android:layout_marginTop="10dp"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="3dp"
        app:cardBackgroundColor="@color/colorPrimaryDark"
        app:cardCornerRadius="25dp"
        app:cardElevation="25dp">

        <TextView
            android:id="@+id/reserve_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:onClick="makereserve"
            android:text="حجز مراجعة"
            android:textColor="#fff"
            android:textSize="20dp" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card2_id"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:layout_below="@id/doc_country"
        android:layout_marginTop="10dp"
        android:layout_alignParentLeft="true"
        app:cardBackgroundColor="@color/colorPrimaryDark"
        app:cardCornerRadius="25dp"
        app:cardElevation="25dp">

        <TextView
            android:id="@+id/back_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:onClick="BacktoDoctorList"
            android:text="عودة"
            android:textColor="#fff"
            android:textSize="25sp" />



    </android.support.v7.widget.CardView>



</RelativeLayout>
